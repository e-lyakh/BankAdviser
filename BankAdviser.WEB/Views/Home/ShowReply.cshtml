@model List<BankAdviser.WEB.Models.ReplyEntryVM>

@{
    ViewBag.Title = "Депозиты по запросу";
}

<h3 class="header">Депозиты по запросу:</h3>


<table class="table">
        <tr>            
            <th>
                @Html.DisplayNameFor(model => model[0].BankName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].DepositName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].DepositRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].DepositBonusInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].NetIncome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Remark)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].DepositUrl)
            </th>            
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="border_bottom">                
                <td>
                    @Html.DisplayFor(modelItem => item.BankName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepositName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepositRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepositBonusInfo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NetIncome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remark)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepositUrl)
                </td>               
            </tr>
        }
</table>